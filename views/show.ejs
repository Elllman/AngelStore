<%- include("partials/header") %>
<div class="ui centered black header"> <%= blog.title %> </div>
<div class="ui main  piled inverted  text container segment">
    
      
      <div class="ui inverted "> 
        <div class="ui centered rouded image">
            <img src="<%= blog.image %>">
        </div>
          <div class="discription">
              <p> <%- blog.body %> </p>
          </div >
        
        <div class="ui circular labels">
           <a class="ui label">
              <%= blog.count %> бутонов
             </a>

        </div>


        <div class="ui tag labels" > 
              
              <a class="ui label">
                 <%=  blog.price  %> тенге
                </a>
        </div>

        
      </div>
      <div class="ui buttons">
      <button class="ui button">
           <a  href="/blogs/<%= blog._id %>/sale">Заказать</a>
       </button>

      <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
           <button class="ui  button">Удалить</button>
       </form>
       </div>
    
    
</div>
<%- include("partials/footer") %>