<%- include("partials/header") %>

             
             <div class="ui tertiary inverted  segment" >
         
              <img class="ui centered bordered image" src="https://99px.ru/sstorage/53/2018/05/tmb_227921_153658.jpg">
                  
                  <h1 class="ui center violet aligned header">
                       
                          Angel Store
                          <div class="sub header">plants our friends</div>
                   </h1>
                   
              </div>
         
               <div class="ui four column centered grid" >
<% blogs.forEach( function (blog){ %>
    
       
        <div class="ui link cards">
             
           
             <div class="card">
               <div class="image">
                 <img src="<%= blog.image %>">
               </div>
               <div class="content">
                 <div class="header"><h2> <%=blog.title%>  </h2></div>
                 
                 <div class="description">
                   <p> <%= blog.body.substring(0, 100) %>... </p>
                 </div>
               </div>
               <div class="extra content">
                 <span class="right floated">
                   <p> <%= blog.count %> бутонов </p>
                 </span>
                 <span class="left floated">
                   <i class="tags icon"></i>
                   <p> <%=  blog.price  %> тенге</p>
                 </span>
               </div>
           
              

                <div> 
               <button class="ui button">
                    <a href="/blogs/<%= blog._id %>"> Открыть</a>
               </button>
               </div>

            </div>
        </div>
        

<% })%>
        <div class="ui segment">
               <img class="ui huge left floated image" src="https://www.firestock.ru/wp-content/uploads/2018/06/TSvetyi-tsvetochnik-bumaga-upakovka-remeslo-Flowers-florist-paper-packaging-craft-5000--3337-700x466.jpg">
